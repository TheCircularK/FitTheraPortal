@using FitTheraPortal.Client.Dtos

<style>
    .exercise-container {
        display: flex;
        overflow-x: scroll;
        gap: 10px;
        padding: 10px;
        scroll-snap-type: x mandatory;
        white-space: nowrap;
    }

    .exercise-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-width: 150px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        scroll-snap-align: start;
    }
        .exercise-card b {
            max-width: 100%;
            overflow-wrap: break-word;
            text-align: center;
        }
    .exercise-gif {
        width: 100px;
        height: auto;
        margin-bottom: 10px;
    }
</style>

@if (Exercise is null)
{
    <div>Exercise is null. Check the database!</div>
}
else
{
    <div class="exercise-card">
        <b>@Exercise.Name</b>
        <img src="@Exercise.Gif" alt="@Exercise.Name" class="exercise-gif"/>
    </div>
}


@code {
    [Parameter]
    public ExerciseDto? Exercise { get; set; }
}